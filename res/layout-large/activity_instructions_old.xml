<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#CCCCCC"
    tools:context=".InstructionsActivityOld" >

    <ImageButton
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"  
	    android:maxWidth="120dp"    
	    android:scaleType="fitCenter"  
        android:src="@drawable/nav_left" />
    
    <ImageButton
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
        android:adjustViewBounds="true"  
		    android:maxWidth="120dp"    
		    android:scaleType="fitCenter"  
        android:src="@drawable/nav_right" />
    
    <TextView
          android:id="@+id/labelInst"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
           android:layout_marginTop="25dp"
          android:textSize="25dp"
          android:text="Main Menu" />
    
    <TextView
          android:id="@+id/text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_below="@+id/labelInst"
           android:layout_marginTop="15dp"
          android:textSize="20dp"
          android:text="@string/tab1_string" />
    
      <ImageView
          android:id="@+id/imageView1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_below="@+id/text"
          android:layout_marginTop="15dp"
          android:adjustViewBounds="true"  
		    android:maxWidth="250dp"    
		    android:scaleType="fitCenter"
          android:src="@drawable/inst1" />
   
    </RelativeLayout>